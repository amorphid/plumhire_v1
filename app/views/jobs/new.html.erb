<div class="container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <div class="content-body">
         <h3 class="text-center">
          New Job
        </h3>
        <form class="form"
        role="form"
        >
          <div class="form-group">
            <label for="new_job_title">
              Title
            </label>
            <input class="form-control"
              id="new_job_title"
              type="text"
            >
          </div>
          <div class="form-group">
            <label for="new_job_body">
            Body
            </label>
              <textarea class="form-control"
                id="new_job_body"
                rows="10"
                style="resize:vertical"
              ></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>
