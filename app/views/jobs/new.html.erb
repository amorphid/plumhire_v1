<% page_title("New job") %>

<div class="page page-type2">
  <%= image_tag(
      "plum1-152x152.png",
      alt: "Plumhire",
      class: "center-block img-responsive"
    )
  %>
  <h1>
    New job
  </h1>
  <%= form_for(
      @j,
      html: {
        class: "form"
      },
      method: :put,
      role: "form",
      url: job_path(@j)
    ) do |f|
  %>
    <% if @j.errors.any? %>
      <%= render("errors") %>
    <% end %>
    <div class="form-group">
      <%= f.label(:title) %>
      <%= f.text_field(
          :title,
          class: "form-control input-lg",
          data: {
            "parsley-required" => "true"
          },
          tabindex: "1"
        )
      %>
    </div>
    <div class="form-group">
      <%= f.label(:body) %>
      <%= f.text_area(
          :body,
          class: "form-control input-lg",
          data: {
            "parsley-required" => "true"
          },

          rows: "10",
          tabindex: "2"
        )
      %>
    </div>
    <%= f.submit(
        "Submit",
        class: "btn btn-block btn-primary btn-lg",
        tabindex: "3"
      )
    %>
  <% end %>
</div>
