<!DOCTYPE html>

<html>
  <head>
    <title>
      Plumhire
    </title>
    <%= stylesheet_link_tag(
        "application",
        media: "all",
        "data-turbolinks-track" => true
      )
    %>
    <%= stylesheet_link_tag(ENV["webfonts"]
      )
    %>
    <%= stylesheet_link_tag params[:controller] %>
    <%= javascript_include_tag(
        "application",
        "data-turbolinks-track" => true
      )
    %>
    <%= javascript_include_tag params[:controller] %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if flash[:success] %>
      <%= flash[:success] %>
    <% end %>
    <%= yield %>
  </body>
</html>
