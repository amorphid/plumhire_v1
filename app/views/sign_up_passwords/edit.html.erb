<div class="account-wrapper">
  <div class="account-body">
    <h3>
      Sign Up
    </h3>
    <h4>
      Step 3 of 3: Create password
    </h4>
    <%= form_for(
        @user,
        data: { parsley: "validate" },
        html: { class: "account-form form" },
        url: sign_up_password_path(@sign_up)
      ) do |f|
    %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <div id="error_explanation">
              <% @user.errors.full_messages.each do |msg| %>
                <li>
                  <%= msg %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <%= f.hidden_field(
         :id,
         value: @user.uuid
       )
      %>
      <div class="form-group">
        <%= f.label(
            :password,
            class: "placeholder-hidden"
          )
        %>
        <%= f.text_field(
            :password,
            class: "form-control",
            data: { required: "change" },
            placeholder: "Your Password",
            tabindex: "1",
          )
        %>
      </div>
      <div class="form-group">
        <%= f.button(
            "Submit",
            class: "btn btn-block btn-lg btn-secondary",
            tabindex: "2",
            type: "submit"
          )
        %>
      </div>
    <% end %>
  </div>
</div>
